{
  "name": "InstaClone",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/expo": "^25.0.9",
    "@types/expo__vector-icons": "^6.2.2",
    "@types/jest": "^22.2.2",
    "@types/react": "^16.1.0",
    "@types/react-native": "^0.52.21",
    "@types/react-navigation": "^1.5.9",
    "@types/react-test-renderer": "^16.0.0",
    "husky": "^0.14.3",
    "jest-expo": "27.0.0",
    "jest-junit": "^3.7.0",
    "prettier": "1.12.1",
    "react-native-scripts-ts": "1.13.0",
    "react-native-typescript-transformer": "^1.2.3",
    "react-test-renderer": "16.3.0-alpha.1",
    "ts-jest": "^22.4.2",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.1"
  },
  "main": "./node_modules/react-native-scripts-ts/build/bin/crna-entry.js",
  "scripts": {
    "start": "react-native-scripts-ts start",
    "eject": "react-native-scripts-ts eject",
    "android": "react-native-scripts-ts android",
    "ios": "react-native-scripts-ts ios",
    "test": "jest",
    "lint": "tslint -c tslint.json src/**.{tx,tsx} App.tsx --fix",
    "ci-lint": "tslint -c tslint.json src/**.{tx,tsx} App.tsx",
    "lint-check": "tslint-config-prettier-check ./tslint.json",
    "format": "prettier --write src/**.{tx,tsx} App.tsx",
    "ci-format": "prettier --list-different src/**.{tx,tsx} App.tsx"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "jest-expo",
    "testMatch": [
      "**/__tests__/**/*.[tj]s?(x)",
      "**/?(*.)(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "expo": "^27.0.0",
    "react": "16.3.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-27.0.0.tar.gz",
    "react-navigation": "^1.5.11"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run format lint"
    }
  }
}
